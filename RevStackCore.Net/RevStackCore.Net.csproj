<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" />

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
	<PackageId>RevStackCore.Net</PackageId>
    <PackageVersion>1.0.1</PackageVersion>
    <Authors>S. Francis, D. Sheets</Authors>
    <Description>.net core network protocol utility class library</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Net Standard 1.5 release</PackageReleaseNotes>
    <Copyright>Copyright 2017</Copyright>
    <PackageTags>RevStackCore Net Network Utilities</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" />
    <EmbeddedResource Include="**\*.resx" />
    <Compile Remove="Http\HttpResult.cs" />
    <Compile Remove="Utilities\EmailUtility.cs" />
    <Compile Remove="Utilities\DomainUtility.cs" />
    <Compile Remove="Http\Http.cs" />
    <Compile Remove="Utilities\PathUtility.cs" />
    <Compile Remove="Utilities\UriUtility.cs" />
    <Compile Remove="Extensions\Http.cs" />
    <Compile Remove="Enums\FtpNodeType.cs" />
    <Compile Remove="Entities\BaseCredential.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Sdk">
      <Version>1.0.0-alpha-20161104-2</Version>
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="NETStandard.Library">
      <Version>1.6.1</Version>
    </PackageReference>
    <PackageReference Include="System.Net.Requests">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Globalization.Extensions">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="MimeKit">
      <Version>1.10.0</Version>
    </PackageReference>
    <PackageReference Include="MailKit">
      <Version>1.10.1</Version>
    </PackageReference>
    <PackageReference Include="Flurl.Http">
      <Version>1.1.1</Version>
    </PackageReference>
    <PackageReference Include="CoreFtp">
      <Version>1.3.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Smtp\" />
    <Folder Include="Http\" />
    <Folder Include="Ftp\" />
    <Folder Include="Entities\" />
    <Folder Include="Extensions\" />
    <Folder Include="Enums\" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
